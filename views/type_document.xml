<odoo>
    <data>
        <record id="type_document_form" model="ir.ui.view">
            <field name="name">Type de document</field>
            <field name="model">type_document.record</field>
            <field name="arch" type="xml">
                <form string="Type de document">
                    <header>

                    </header>
                    <sheet string="Type de document">
                        <group col="2">
                            <group>
                                <field name="nom"/>
                            </group>
                            <group>
                                <field name="code"/>
                            </group>

                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="type_document_tree" model="ir.ui.view">
            <field name="name">Type de documents</field>
            <field name="model">type_document.record</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="nom"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>


        <record id="type_document_action" model="ir.actions.act_window">
            <field name="name">Type document</field>
            <field name="res_model">type_document.record</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">

                </p>
                <p>

                </p>
            </field>
        </record>




    </data>
</odoo>
